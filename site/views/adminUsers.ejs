<%- include("./partials/head") %> <!-- HEAD -->
<%- include("./partials/header") %> <!-- HEADER -->

<div class="container" id="adminProductos"><!-- container bootstrap -->
    <section class="users">
        <div class="row users">

            <div class="titulo col-12">
                <h2>
                    <%= title %>
                </h2>
            </div>

            <div class="contenido text-left"><!-- contenedor principal-->

                <!-- PESTAÑAS  DETALLE - EDITAR - ELIMINAR  - TODOS MIS USUARIOS-->
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item col-6 col-lg-4" role="presentation">
                        <a class="nav-link " id="home-tab" data-toggle="tab" href="#detalle" role="tab" aria-controls="home" aria-selected="true">Detalle Usuario</a>
                    </li>
                    <li class="nav-item col-6 col-lg-4" role="presentation">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#editar" role="tab" aria-controls="detalle" aria-selected="false">Editar Usuario</a>
                    </li>
                    <li class="nav-item col-6 col-lg-4" role="presentation">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#delete" role="tab" aria-controls="detalle" aria-selected="false">Eliminar Usuario</a>
                    </li>
                    <li class="nav-item col-6 col-lg-12" role="presentation">
                        <a class="nav-link text-center" id="profile-tab" data-toggle="tab" href="#todosMisUsers" role="tab" aria-controls="detalle" aria-selected="false">Todos mis Usuarios</a>
                    </li>
                </ul>

                <div class="tab-content" id="myTabContent"><!-- menu tabulacion -->

                        <!-- DETALLE USUARIO ADMIN -->
                    <div class="container tab-pane fade show active" id="detalle" role="tabpanel" aria-labelledby="profile-tab">

                        <div class="row p-3">

                            <!-- FLECHAS NAVEGACION Y NOMBRE -->
                            <div class="col-12">
                                <div class="row titFlechas col-12">
                                    <!-- FLECHA IZQ -->
                                    <div class="col-1 ">
                                        <% if (user.id>1) { %>
                                            <a href="/users/admin/<%- user.id-1 %> " ><i class="fas fa-arrow-circle-left"></i></a>
                                            <% } %>
                                    </div>
                                    <!-- NOMBRE DEL user -->
                                    <div class="col-10">
                                        <h5 class="text-center">
                                            <%= user.nombre %> <%= user.apellido %>
                                        </h5>
                                    </div>
                                    <!-- FLECHA DERECHA -->
                                    <div class="col-1">
                                        <% if (user.id < total) { %>
                                            <a href="/users/admin/<%- user.id+1 %> " ><i class="fas fa-arrow-circle-right"></i></a>

                                            <% } %>
                                    </div>
                                </div>
                            </div><!-- FIN FLECHAS NAVEGACION -->

                            <!-- IMAGEN -->
                            <div class="col-12 col-md-4 mt-3">
                                <figure class="text-center">
                                    <a href="/users/admin/<%= user.id %>"><img src="/images/users/<%= user.image %> " alt="" class="img-fluid"></a>
                                </figure>
                            </div>

                            <!-- INFO user -->
                            <div class="col-12 col-md-8 mt-3">
     
                                <div class="row">
                                    <!-- EDAD -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Edad:</b> 
                                            <%= user.edad %>
                                        </span>
                                    </div>
                                    <!-- CATEGORIA -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Categoría:</b> 
                                            <%= user.category %>
                                        </span>
                                    </div>
                                    <!-- MAIL -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Email:</b> 
                                            <%= user.email %>
                                        </span>
                                    </div>
                                    <!-- PAIS -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Pais:</b> 
                                            <%= user.pais %>
                                        </span>
                                    </div>
                                  <!-- LOCALIDAD -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Localidad:</b> 
                                            <%= user.localidad %>
                                        </span>
                                    </div>
                                   <!-- DIRECCION -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Direccion:</b> 
                                            <%= user.direccion %>
                                        </span>
                                    </div>
                                    <!-- COMPRAS -->
                                    <div class="col-12 -">
                                        <span><b>Compras realizadas:</b> 
                                            <%= user.compras %>
                                        </span>
                                    </div>
                                </div><!--  -->
                            </div><!-- FIN INFO user -->


                        </div>
                    </div><!-- FIN DETALLE -->
                    

                    <!-- FORMULARIO EDITAR -->
                    <div class="container tab-pane fade  " id="editar" role="tabpanel" aria-labelledby="home-tab">
                        <form action="/users/editar/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                            <div class="col-12 p-3">
                                <div class="row titFlechas col-12 ">

                                    <!-- IMAGEN -->
                                    <div class="col-12 col-md-4 mt-3">
                                        <figure class="text-center">
                                            <a href="/users/admin/<%= user.id %>"></a><img src="/images/users/<%= user.image %> " alt="" class="img-fluid"></a>
                                            <input type="file" name="image" class="col-12">
                                        </figure>
                                    </div>

                                    <!-- NOMBRE DEL user -->
                                    <div class="col-12 col-md-8">
                                        <h5 class="text-left">
                                            <label for=""class="col-12 col-md-3">Nombre </label>
                                            <input type="text" class="" value="<%= user.nombre %>" name="nombre">
                                        </h5>
                                        <h5 class="text-left">
                                            <label for=""class="col-12 col-md-3">Apellido</label>
                                            <input type="text" value="<%= user.apellido %>" name="apellido"> 
                                        </h5>    
                                        <h5 class="text-left">
                                            <label for=""class="col-12 col-md-3">Edad</label>
                                            <input type="Number" value="<%= user.edad %>" name="edad"> 
                                        </h5>   
                                        <h5 class="text-left">
                                            <label for="" class="col-12 col-md-3">Email</label>
                                            <input type="email" value="<%= user.email %>" name="email"> 
                                        </h5>
                                        <h5 class="text-left">
                                            <label for="" class="col-12 col-md-3">Categoria</label>
                                            <input type="text" value="<%= user.category %>" name="category"> 
                                        </h5> 
                                        <h5 class="text-left">
                                            <label for="" class="col-12 col-md-3">Pais</label>
                                            <input type="text" value="<%= user.pais %>" name="pais"> 
                                        </h5>  
                                        <h5 class="text-left">
                                            <label for="" class="col-12 col-md-3">Localidad</label>
                                            <input type="text" value="<%= user.localidad %>" name="localidad"> 
                                        </h5> 
                                        <h5 class="text-left">
                                            <label for="" class="col-12 col-md-3">Direccion</label>
                                            <input type="text" value="<%= user.direccion %>" name="direccion"> 
                                        </h5>   
                                        <h5 class="text-left">
                                            <label for="" class="col-12 col-md-3">Compras Realizadas</label>
                                            <input type="text" value="<%= user.compras %>" name="compras"> 
                                        </h5> 
                                         <!-- BOTONES  EDIT-->
                                        <div class="col-12 d-flex justify-content-center" id="botones">
                                            <button class="btn btn-danger mr-2">Cancelar</button>
                                            <button class="btn btn-info" type="submit" name="id" value="<%= user.id %> ">Actualizar</button>

                                        </div>                
                                    </div>

                                </div>
                            </div><!-- FIN FLECHAS NAVEGACION -->
                        </form>
                        
                    </div><!-- FIN EDITAR -->

                    <!-- ELIMINAR user  -->
                    <div class="container tab-pane fade" id="delete" role="tabpanel" aria-labelledby="home-tab">

                        <div class="row p-3">

                            <!-- FLECHAS NAVEGACION Y NOMBRE -->
                            <div class="col-12">
                                <div class="row titFlechas col-12">
                                    <!-- NOMBRE DEL user -->
                                    <div class="col-10">
                                        <h5 class="text-center">
                                            <%= user.nombre %> <%= user.apellido %>
                                        </h5>
                                    </div>
                                </div>
                            </div>

                            <!-- IMAGEN -->
                            <div class="col-12 col-md-4 mt-3">
                                <figure class="text-center">
                                    <a href="/users/admin/<%= user.id %>"><img src="/images/users/<%= user.image %> " alt="" class="img-fluid"></a>
                                </figure>
                            </div>

                            <!-- INFO user -->
                            <div class="col-12 col-md-8 mt-3">
     
                                <div class="row">
                                    <!-- EDAD -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Edad:</b> 
                                            <%= user.edad %>
                                        </span>
                                    </div>
                                    <!-- CATEGORIA -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Categoría:</b> 
                                            <%= user.category %>
                                        </span>
                                    </div>
                                    <!-- MAIL -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Email:</b> 
                                            <%= user.email %>
                                        </span>
                                    </div>
                                    <!-- PAIS -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Pais:</b> 
                                            <%= user.pais %>
                                        </span>
                                    </div>
                                  <!-- LOCALIDAD -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Localidad:</b> 
                                            <%= user.localidad %>
                                        </span>
                                    </div>
                                   <!-- DIRECCION -->
                                    <div class="col-12 col-lg-4">
                                        <span><b>Direccion:</b> 
                                            <%= user.direccion %>
                                        </span>
                                    </div>
                                    <!-- COMPRAS -->
                                    <div class="col-12 -">
                                        <span><b>Compras realizadas:</b> 
                                            <%= user.compras %>
                                        </span>
                                    </div>
                                </div><!--  -->
                                <div class="col-12 d-flex justify-content-center mt-5" id="botones"></div>
                                <form action="/users/delete/<%= user.id %>?_method=DELETE" method="POST">
                                                
                                    <button class="btn btn-danger ">ELIMINAR USUARIO</button>
                                </form>
                                </div>
                            </div><!-- FIN INFO user -->


                        
                    </div><!-- FIN ELIMINAR -->
 
                     <!-- TODOS MIS user  -->
                    <div class="container tab-pane fade" id="todosMisUsers" role="tabpanel" aria-labelledby="home-tab">

                        <div class="row p-3">
                            <!-- IMAGEN -->
                            <% usersTotales.forEach( user=> { %>
                            <div class="col-12">
                                <ul>
                                    <li><a href="/users/admin/<%= user.id %>"><h5 style="color: var(--color-azul);"><%= user.id %> - <%= user.nombre %>  <%= user.apellido %> | <%= user.email %> </h5></a></li>
                                </ul>
                            </div>
                            <% }) %>
                        </div>
                    </div><!-- FIN TODOS MIS userS -->



                 </div><!-- fin menu tabulacion -->
            </div><!-- fin contenedor principal -->

            
        </div>
    </section>
</div>



<%- include("./partials/footer") %> <!-- FOOTER -->