<%- include("./partials/head") %> <!-- HEAD -->
<%- include("./partials/header") %> <!-- HEADER -->

<!-- ACA EL CODIGO -->
<main>
    <!-- Caja principal contenedora de login y registro -->
    <section class="container login" action="">
        <!-- FORMULARIO LOGIN -->
        <form class="log" action="/users/login" method="POST">
            
                <h1>Ingresá</h1>
                    <div class="datos">
                        <input type="text" name="nombre" id="name" placeholder="Email o Usuario"required><label for="name"><i class="fas fa-user"></i></label>
                    </div>
                    <div class="datos">
                    <input type="password" name="password" id="password" placeholder="Contraseña"><label for="password" required><i class ="fas fa-unlock-alt"></i></label>
                    </div>
                    <div class="recuerdame datos">
                        <input type="checkbox" id="recuerdame"><label for="recuerdame">Recordarme</label>
                    </div>
                    <a href="">¿Olvidaste tu usuario y/o contraseña? </a>
                    <div class="datos">
                    <button type="submit">Aceptar</button>
                    <i class="fad fa-horizontal-rule"></i>
                     </div>
                     <!-- ERRORES DE LOGIN -->
                     <% if (typeof errorsLog != 'undefined') { %> 
  
                        <% errorsLog.forEach(error => { %>
                          <div class="alert alert-danger" role="alert">
                            <%= error.msg %> 
                          </div>
                        <% }) %> 
                    
                      <% } %> 
             
        </form> 

        <!-- FORMULARIO REGISTRO -->
        <form action="/users/registro" class="registro" method="POST">
            
                <h2>Registrate</h2>
                <div class="datos">
                    <input type="text" name="nombre" id="nameRegistro" placeholder="Nombre de usuario" required><label for="nameRegistro"><i class="fas fa-user"></i></label>
                </div>
                <div class="datos">
                    <input type="email" name="email" id="email" placeholder="ingrese un Email valido" required><label for="email"><i class="fas fa-envelope"></i></label>
                </div>
                <div class="datos">
                    <input type="password" name="password" id="passRegistro" placeholder="Contraseña" required><label for="passRegistro"><i class="fas fa-lock"></i></label>
                </div>
                <div class="datos">
                    <input type="password" name="repeatPassword" id="passRepeat" placeholder="Repita su Contraseña" required><label for="passRepeat"><i class="fas fa-unlock-alt"></i></label>
                </div>
                <div class="Terminos"> 
                    <input class="terminos" name="terminos" type="checkbox" id="terminos" required>
                    <label for="terminos">Acepto los <a href="">términos y condiciones</a></label>
                </div>
                
                <button type="submit">Aceptar</button>
                                     <!-- ERRORES DE REGISTRO -->
                                     <% if (typeof errorsReg != 'undefined') { %> 
  
                                        <% errorsReg.forEach(error => { %>
                                          <div class="alert alert-danger" role="alert">
                                            <%= error.msg %> 
                                          </div>
                                        <% }) %> 
                                    
                                      <% } %> 
                

        </form>
    </section>
    
</main>

<%- include("./partials/footer") %> <!-- FOOTER -->